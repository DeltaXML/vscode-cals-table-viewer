<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://docbook.org/xml/5.0/rng/docbook.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://docbook.org/xml/5.0/rng/docbook.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<article xmlns="http://docbook.org/ns/docbook"
    xmlns:xlink="http://www.w3.org/1999/xlink" version="5.0">
    <title>Table examples</title>
    <section>
        <title>CALS table with no colnames</title>
        <table frame="all">
            <title>CALS table without colnames</title>
            <tgroup cols="5">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="1*"/>
                <colspec colname="c3" colnum="3" colwidth="1*"/>
                <colspec colname="c4" colnum="4" colwidth="1*"/>
                <colspec colname="c5" colnum="5" colwidth="1*"/>
                <thead>
                    <row>
                        <entry>Name</entry>
                        <entry>Column name</entry>
                        <entry>Rubbish Data</entry>
                        <entry>More Rubbish Data</entry>
                        <entry>Keep This</entry>
                    </row>
                </thead>
                <tbody>
                    <row>
                        <entry>Tom</entry>
                        <entry>Unique Data</entry>
                        <entry>0000</entry>
                        <entry>XXX</entry>
                        <entry>Critical</entry>
                    </row>
                    <row>
                        <entry>Fred</entry>
                        <entry morerows="2">Shared Data</entry>
                        <entry>12345</entry>
                        <entry>ABCDE</entry>
                        <entry>Important</entry>
                    </row>
                    <row>
                        <entry>Joe</entry>
                        <entry>6789</entry>
                        <entry>FGHJ</entry>
                        <entry>Secure</entry>
                    </row>
                    <row>
                        <entry>John</entry>
                        <entry>1010</entry>
                        <entry>KLMN</entry>
                        <entry>Vital</entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
        
    </section>
    <section>
        <title>CALS table with colnames</title>
        <table frame="all">
            <title>CALS table with colnames</title>
            <tgroup cols="5">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="1*"/>
                <colspec colname="c3" colnum="3" colwidth="1*"/>
                <colspec colname="c4" colnum="4" colwidth="1*"/>
                <colspec colname="c5" colnum="5" colwidth="1*"/>
                <thead>
                    <row>
                        <entry colname="c1">Name</entry>
                        <entry colname="c2">Column name</entry>
                        <entry colname="c3">Rubbish Data</entry>
                        <entry colname="c4">More Rubbish Data</entry>
                        <entry colname="c5">Keep This</entry>
                    </row>
                </thead>
                <tbody>
                    <row>
                        <entry colname="c1">Tom</entry>
                        <entry colname="c2">Unique Data</entry>
                        <entry colname="c3">0000</entry>
                        <entry colname="c4">XXX</entry>
                        <entry colname="c5">Critical</entry>
                    </row>
                    <row>
                        <entry colname="c1">Fred</entry>
                        <entry colname="c2" morerows="2">Shared Data</entry>
                        <entry colname="c3">12345</entry>
                        <entry colname="c4">ABCDE</entry>
                        <entry colname="c5">Important</entry>
                    </row>
                    <row>
                        <entry colname="c1">Joe</entry>
                        <entry colname="c3">6789</entry>
                        <entry colname="c4">FGHJ</entry>
                        <entry colname="c5">Secure</entry>
                    </row>
                    <row>
                        <entry colname="c1">John</entry>
                        <entry colname="c3">1010</entry>
                        <entry colname="c4">KLMN</entry>
                        <entry colname="c5">Vital</entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
        
    </section>
    <section>
        <title>HTML table</title>
        <table frame="void">
            <caption>HTML table</caption>
            
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Column name</th>
                    <th>Rubbish Data</th>
                    <th>More Rubbish Data</th>
                    <th>Keep This</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Tom</td>
                    <td>Unique Data</td>
                    <td>0000</td>
                    <td>XXX</td>
                    <td>Critical</td>
                </tr>
                <tr>
                    <td>Fred</td>
                    <td rowspan="3">Shared Data</td>
                    <td>12345</td>
                    <td>ABCDE</td>
                    <td>Important</td>
                </tr>
                <tr>
                    <td>Joe</td>
                    <td>6789</td>
                    <td>FGHJ</td>
                    <td>Secure</td>
                </tr>
                <tr>
                    <td>John</td>
                    <td>1010</td>
                    <td>KLMN</td>
                    <td>Vital</td>
                </tr>
            </tbody>
        </table>
        
    </section>
</article>
