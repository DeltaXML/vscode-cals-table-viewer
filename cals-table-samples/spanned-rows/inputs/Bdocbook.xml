<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://docbook.org/xml/5.0/rng/docbook.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://docbook.org/xml/5.0/rng/docbook.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<article xmlns="http://docbook.org/ns/docbook"
    xmlns:xlink="http://www.w3.org/1999/xlink" version="5.0">
    <title>Table examples</title>
    <section>
        <title>CALS table with no colnames</title>
        <table frame="all">
            <title>CALS table without colnames</title>
            <tgroup cols="3">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="1*"/>
                <colspec colname="c5" colnum="3" colwidth="1*"/>
                <thead>
                    <row>
                        <entry>Name</entry>
                        <entry>Column title</entry>
                        <entry>Keep This</entry>
                    </row>
                </thead>
                <tbody>
                    <row>
                        <entry>Tom</entry>
                        <entry>Unique Data</entry>
                        <entry>Critical</entry>
                    </row>
                    <row>
                        <entry>Fred</entry>
                        <entry>Shared Data</entry>
                        <entry>Important</entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
        
    </section>
    <section>
        <title>CALS table with colnames</title>
        <table frame="all">
            <title>CALS table with colnames</title>
            <tgroup cols="3">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="1*"/>
                <colspec colname="c5" colnum="3" colwidth="1*"/>
                <thead>
                    <row>
                        <entry colname="c1">Name</entry>
                        <entry colname="c2">Column title</entry>
                        <entry colname="c5">Keep This</entry>
                    </row>
                </thead>
                <tbody>
                    <row>
                        <entry colname="c1">Tom</entry>
                        <entry colname="c2">Unique Data</entry>
                        <entry colname="c5">Critical</entry>
                    </row>
                    <row>
                        <entry colname="c1">Fred</entry>
                        <entry colname="c2">Shared Data</entry>
                        <entry colname="c5">Important</entry>
                    </row>
                </tbody>
            </tgroup>
        </table>
        
    </section>
    <section>
        <title>HTML table</title>
        <table frame="void">
            <caption>HTML table</caption>
            
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Column title</th>
                    <th>Keep This</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Tom</td>
                    <td>Unique Data</td>
                    <td>Critical</td>
                </tr>
                <tr>
                    <td>Fred</td>
                    <td>Shared Data</td>
                    <td>Important</td>
                </tr>
            </tbody>
        </table>
        
    </section>
</article>
